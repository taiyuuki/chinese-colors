{
  "name": "chinese-color",
  "displayName": "国色",
  "description": "预设颜色代码提示——中国传统色",
  "publisher": "taiyuuki",
  "version": "2.0.0",
  "type": "module",
  "icon": "icon.png",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/taiyuuki/chinese-colors.git"
  },
  "galleryBanner": {
    "color": "#813c85",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "预设颜色",
    "中国色",
    "中国传统色",
    "颜色代码",
    "代码提示"
  ],
  "activationEvents": [
    "workspaceContains:**/package.json",
    "onLanguage:haml",
    "onLanguage:hbs",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:markdown",
    "onLanguage:ejs",
    "onLanguage:php",
    "onLanguage:svelte",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue-html",
    "onLanguage:vue",
    "onLanguage:sass",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:stylus",
    "onLanguage:json"
  ],
  "main": "./dist/index.cjs",
  "contributes": {
    "configuration": [
      {
        "title": "Chinese Colors",
        "properties": {
          "chineseColors.RGB": {
            "type": "boolean",
            "default": false,
            "description": "控制预设的中国色采用RGB格式（重启编辑器生效）"
          },
          "chineseColors.preview": {
            "type": "boolean",
            "default": true,
            "description": "颜色预览"
          },
          "chineseColors.custom": {
            "type": "array",
            "description": "自定义颜色",
            "default": [],
            "items": {
              "name": {
                "type": "string",
                "description": "颜色名称，输入时可匹配。"
              },
              "rgb": {
                "type": "array",
                "description": "rgb颜色代码，由0-255的数字组成的数组，可以有alpha通道，例如：[12,123,234,0.5]。"
              },
              "phonics": {
                "type": "string",
                "description": "拼音或注音，输入时可匹配。"
              }
            },
            "uniqueItems": true
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint src/** --fix",
    "dev": "tsup --watch",
    "build": "tsup",
    "bump:patch": "bump patch",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish",
    "test": "vitest",
    "gen": "esno scripts/gen.ts && eslint src/colors/** --fix"
  },
  "author": "taiyuuki <taiyuuki@qq.com>",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "^2.12.2",
    "@taiyuuki/eslint-config": "^1.0.2",
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.67.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "pinyin-pro": "^3.19.7",
    "tsup": "^8.0.2"
  },
  "dependencies": {
    "-": "^0.0.1"
  }
}