{
  "name": "chinese-color",
  "displayName": "Chinese Colors",
  "description": "代码提示列出颜色——中国传统色",
  "publisher": "taiyuuki",
  "version": "2.0.5",
  "type": "module",
  "icon": "res/icon.png",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/taiyuuki/chinese-colors.git"
  },
  "galleryBanner": {
    "color": "#8e7cd6",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "预设颜色",
    "中国色",
    "中国传统色",
    "颜色代码",
    "国色"
  ],
  "activationEvents": [
    "workspaceContains:**/package.json",
    "onLanguage:haml",
    "onLanguage:hbs",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:markdown",
    "onLanguage:ejs",
    "onLanguage:php",
    "onLanguage:svelte",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue-html",
    "onLanguage:vue",
    "onLanguage:sass",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:stylus",
    "onLanguage:json",
    "onCommand:chineseColors.preview"
  ],
  "main": "./dist/index.cjs",
  "contributes": {
    "commands": [
      {
        "command": "chineseColors.preview",
        "title": "Show Chinese Colors(打开中国色预览)",
        "icon": "$(chinese-colors)"
      }
    ],
    "configuration": [
      {
        "title": "Chinese Colors",
        "properties": {
          "chineseColors.RGB": {
            "type": "boolean",
            "default": false,
            "description": "控制预设的中国色采用RGB格式"
          },
          "chineseColors.preview": {
            "type": "boolean",
            "default": true,
            "description": "颜色预览"
          },
          "chineseColors.custom": {
            "type": "array",
            "description": "自定义颜色",
            "default": [],
            "items": {
              "name": {
                "type": "string",
                "description": "颜色名称，输入时可匹配。"
              },
              "rgb": {
                "type": "array",
                "description": "rgb颜色代码，由0-255的数字组成的数组，可以有alpha通道，例如：[12,123,234,0.5]。"
              },
              "phonic": {
                "type": "string",
                "description": "拼音或注音，输入时可匹配。"
              }
            },
            "uniqueItems": true
          }
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "chineseColors.preview",
          "title": "Show Chinese Colors",
          "group": "navigation"
        }
      ]
    },
    "icons": {
      "chinese-colors": {
        "description": "chinese colors",
        "default": {
          "fontPath": "res/chinese-colors.woff2",
          "fontCharacter": "\\E694"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint src/** --fix",
    "dev": "tsup --watch",
    "build": "tsup",
    "bump:patch": "bump patch",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish",
    "test": "vitest",
    "gen": "esno scripts/gen.ts && eslint src/colors/** --fix"
  },
  "author": "taiyuuki <taiyuuki@qq.com>",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@taiyuuki/eslint-config": "^1.3.1",
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.67.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^9.1.0",
    "esno": "^4.7.0",
    "pinyin-pro": "^3.19.7",
    "tsup": "^8.0.2"
  }
}
